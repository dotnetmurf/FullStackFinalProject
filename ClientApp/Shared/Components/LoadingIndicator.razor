@* LoadingIndicator.razor
    A reusable component for displaying a loading spinner during async operations
*@

<div class="loading-indicator">
    @if (IsLoading)
    {
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    }
</div>

<style>
    .loading-indicator {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100px;
    }
</style>

@code {
    /// <summary>
    /// Flag indicating whether the loading spinner should be displayed
    /// </summary>
    [Parameter] public bool IsLoading { get; set; }
}